kernel_tc3: $(KERNEL_TC3) $(DEPENDS)
	$(MERGE) $(KERNEL_TC3)>$@

kernel_ide: $(KERNEL_IDE) $(DEPENDS)
	$(MERGE) $(KERNEL_IDE)>$@

