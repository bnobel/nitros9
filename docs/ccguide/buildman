#!/bin/sh
if [ $# -ne 1 ]; then
   echo "  Usage: buildman commandname"
   echo "  The result is in file r1.html"
   exit 1
fi
# <!ENTITY quot CDATA  "&#22;">
cat -  > temp$$ <<wrapper
<!DOCTYPE article PUBLIC "-//OASIS//DTD DocBook V4.1//EN" [
  <!ENTITY replstart "&lt;">
  <!ENTITY replend   "&gt;">
  <!ENTITY repeatst   "{">
  <!ENTITY repeaten   "}">
  <!ENTITY refentrypage SYSTEM "$1.refentry">
 ]>
<article>
&refentrypage;
</article>
wrapper
docbook2pdf temp$$ 
rm temp$$
